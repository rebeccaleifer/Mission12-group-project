@{
    ViewData["Title"] = "Make Appointment";
}

@model Mission12.Models.MakeAppointment

<body style="background-image: url(../../img/blue1.jpg); background-repeat: no-repeat; background-position: center;">
    <br />

    @*Signup Form*@
    <div class="l-form" style="margin: 70px;">
        <form method="post" action="" class="form">
            <h1 class="form__title">Signup Form</h1>

        <div asp-validation-summary="All"></div>

        <div class="form__div">
            <input class="form__input" placeholder=" " asp-for="GroupName" />
            <label class="form__label" asp-for="GroupName">Group Name</label>
        </div>

        <div class="form__div">
            <input class="form__input1" placeholder=" " asp-for="GroupSize" min="1" max="15" />
            <label class="form__label1" asp-for="GroupSize">Group Size (Max 15)</label>
        </div>

        <div class="form__div">
            <input class="form__input2" placeholder=" " asp-for="Email" />
            <label class="form__label2" asp-for="Email">Email</label>
        </div>

        <div class="form__div">
            <input class="form__input3" placeholder=" " asp-for="Phone" />
            <label class="form__label3" asp-for="Phone">Phone</label>
        </div>

        <button type="submit" class="form__button">
            Submit
        </button>
        
    </form>
</div>
</body>
